client.focused_inactive #121212 #121212 #eeeeee #121212 #121212
client.unfocused        #121212 #121212 #eeeeee #ff5757 #121212
client.urgent           #ff5757 #121212 #eeeeee #555757 #121212
client.background       #121212

default_border none
for_window [class="^.*"] border pixel 0

hide_edge_borders smart_no_gaps
smart_borders no_gaps
smart_gaps off
gaps inner 8
gaps outer 0

########## Window management #########

for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [title="Preferences$"] floating enable
for_window [class="Steam"] move to workspace $ws4
