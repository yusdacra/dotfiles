#
# wm independent hotkeys
#

# terminal emulator
alt + Return
	alacritty

# program launcher
alt + {d, Tab}
	rofi -show {drun, window}

alt + shift + p
	bwmenu

# volume settings
{XF86AudioRaiseVolume, XF86AudioLowerVolume, XF86AudioMute}
	amixer -D pulse sset Master {5%+, 5%-, toggle-mute} && $HOME/scripts/dwm-status.sh

# media player
{XF86AudioPlay, XF86AudioPrev, XF86AudioNext, XF86AudioStop}
	mpc {toggle, prev, next, stop} && $HOME/scripts/dwm-status.sh

alt + p
	~/scripts/rofi-mpd.sh -j && $HOME/scripts/dwm-status.sh

# screenshot
Print
	scrot '%Y-%m-%d_%H-%M-%S_scrot.png' -e 'mv $f ~/Resimler/shots/'

# make sxhkd reload its configuration files:
alt + Escape
	pkill -USR1 -x sxhkd
